startup_message off

# Look and feel
hardstatus alwayslastline '%{= dG}[ %{w}%S %{g}][%= %{w}%?%-Lw%?%{r}(%{w}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{w}%Y-%m-%d %{g}]'

# Left Right meta key mods
#ALT-,. and ALT-<>
bindkey "^[," prev
bindkey "^[." next

bind r eval "source $HOME/.screenrc" "echo '.screenrc reloaded!'"

vbell off
bell_msg ""

deflogin off
maptimeout 30
nethack on
defutf8 on

defscrollback 20000

shell "/usr/bin/zsh"
